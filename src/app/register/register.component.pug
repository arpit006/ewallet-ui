div.signup
  h1 REGISTER
  mat-divider
  form([formGroup]='userForm' novalidate)
    div
      .row
        .col-3.form-format
          mat-label.mat-label Name:
          mat-label.mat-label EMAIL:
          mat-label.mat-label MOBILE NO:
          mat-label.mat-label USER NAME:
          mat-label.mat-label PASSWORD:
        .col-9.form-format
          mat-form-field.mat-labels
            input.form-control(matInput, formControlName='name')
          mat-form-field.mat-labels
            input.form-control(matInput, formControlName='email')
          mat-form-field.mat-labels
            input.form-control(matInput, formControlName='mobileNo')
          mat-form-field.mat-labels
            input.form-control(matInput, formControlName='userName')
          mat-form-field.mat-labels
            input.form-control(matInput, formControlName='password')
    mat-divider
    button.save-button(mat-raised-button, (click)= 'onSave()', [routerLink]= '["/user/profile"]',
    [ngClass]="{'disabled': userForm.invalid, 'signedup': userForm.valid}") Sign Up
    button.save-button(mat-raised-button, [routerLink]= '["/login"]') Login
